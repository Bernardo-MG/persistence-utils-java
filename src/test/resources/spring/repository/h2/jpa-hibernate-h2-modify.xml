<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://www.springframework.org/schema/jdbc
        http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-4.0.xsd">

    <!-- ============================= CONFIGURATION ============================= -->

    <!-- Properties -->
    <context:property-placeholder
        location="classpath:spring/repository/jpa-hibernate.properties, classpath:spring/repository/jpa-repository.properties, classpath:spring/repository/h2/jpa-hibernate-h2-modify.properties" />

    <!-- Repository -->
    <import resource="classpath:spring/repository/jpa-repository.xml" />

    <!-- Base configuration -->
    <import resource="classpath:spring/repository/jpa-hibernate.xml" />

    <!-- Entity -->
    <bean id="newEntity" class="${entity.class}" scope="prototype" />

</beans>