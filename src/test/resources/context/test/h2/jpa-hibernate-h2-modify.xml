<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- ============================= CONFIGURATION ============================= -->

    <!-- Properties -->
    <context:property-placeholder
        location="classpath:context/test/test-jpa-basic.properties, classpath:context/persistence/jpa-hibernate.properties, classpath:context/repository/jpa-repository.properties, classpath:context/test/h2/jpa-hibernate-h2-modify.properties" />

    <!-- Repository -->
    <import resource="classpath:context/repository/jpa-repository.xml" />

    <!-- Base configuration -->
    <import resource="classpath:context/persistence/jpa-hibernate.xml" />

    <!-- Entity -->
    <bean id="newEntity" class="${entity.class}" scope="prototype" />

</beans>