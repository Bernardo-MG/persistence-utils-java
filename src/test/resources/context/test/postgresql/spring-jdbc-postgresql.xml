<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- ============================= CONFIGURATION ============================= -->

    <!-- Properties -->
    <context:property-placeholder
        location="classpath:context/test/test-spring-jdbc-basic.properties, classpath:context/persistence/spring-jdbc.properties, classpath:context/repository/spring-jdbc-repository.properties, classpath:context/test/postgresql/spring-jdbc-postgresql.properties" />

    <!-- Repository -->
    <import resource="classpath:context/repository/spring-jdbc-repository.xml" />

    <!-- Base configuration -->
    <import resource="classpath:context/persistence/spring-jdbc.xml" />

</beans>